{
  "multipart": [
    {   "apply": { "model": "darthunscotchmod:block/steepblock" }},

    {   "when": { "machinecenter": "true", "facing": "north" },
      "apply": { "model": "darthunscotchmod:block/steepblock_wall", "uvlock": true }
    },
    {   "when": { "machinecenter": "true", "facing": "east" },
      "apply": { "model": "darthunscotchmod:block/steepblock_wall","y":90, "uvlock": true }
    },
    {   "when": { "machinecenter": "true", "facing": "south" },
      "apply": { "model": "darthunscotchmod:block/steepblock_wall","y":180, "uvlock": true }
    },
    {   "when": { "machinecenter": "true", "facing": "west" },
      "apply": { "model": "darthunscotchmod:block/steepblock_wall","y":270, "uvlock": true }
    },
    {   "when": { "machinecorner": "true","facing": "north" },
      "apply": { "model": "darthunscotchmod:block/steepblock_cornerwall", "uvlock": true }
    },
    {   "when": { "machinecorner": "true","facing": "east" },
      "apply": { "model": "darthunscotchmod:block/steepblock_cornerwall","y":90, "uvlock": true }
    },
    {   "when": { "machinecorner": "true","facing": "south" },
      "apply": { "model": "darthunscotchmod:block/steepblock_cornerwall","y":180, "uvlock": true }
    },
    {   "when": { "machinecorner": "true","facing": "west" },
      "apply": { "model": "darthunscotchmod:block/steepblock_cornerwall","y":270, "uvlock": true }
    }
  ]
}